<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/sleep_history_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Date"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sleep_history_item_wake_up_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/sleep_history_item_mark"
            android:layout_below="@+id/sleep_history_item_date"
            android:text="Wake Up Time"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sleep_history_item_sleep_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sleep_history_item_date"
            android:layout_alignStart="@+id/sleep_history_item_date"
            android:text="Sleep Time"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sleep_history_item_period_of_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Period of Time"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sleep_history_item_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sleep_history_item_date"
            android:layout_toEndOf="@+id/sleep_history_item_sleep_time"
            android:text=" - "
            android:textSize="24sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>